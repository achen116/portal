<div class="sign-in-form">
  <h1>Sign In!</h1>

  <% if @sign_in_error %>
    <p><%= "#{@sign_in_error}" %></p>
  <% end %>

  <form id="form" action='/signin' method='post'>

    <label>Username
      <input type="text" name="username" placeholder="Username">
    </label>
    <br/>

    <label>Password
      <input type="password" name="password" placeholder="Password">
    </label>
    <br/>

    <input type="submit" value="Sign In">

  </form>
</div>