<div class="errors-block">
  <% if @add_product_errors %>
    <% @add_product_errors.each do |error| %>
      <p class="error"><%= error %></p>
    <% end %>
  <% end %>
</div>

<div class="new-product-form">
  <h1 id="create-product-form">Add New Product</h1>


  <form id="create-product-form" action='/categories/<%= category.id %>/products' method='post'>

  	<label>Product Title:
      <input type="text" name="title" placeholder="Add Product Title" value="<%= @new_product.title if @new_product %>">
    </label>
    <br/>

    <label>Product Description:
      <input name="description" placeholder="Add Product Description" value="<%= @new_product.description if @new_product %>">
    </label>
    <br/>

    <label>Product Price:
      <input type="number" min="0" step="0.01" name="price" placeholder="Add Product Price" value="<%= @new_product.price if @new_product %>">
    </label>
    <br/>

    <label>Product Category:
      <input type="text" name="category" value="<%= "#{category.name}" %>">
    </label>
    <br/>

  	<input type="submit" value="Create Product">
  </form>
</div>
